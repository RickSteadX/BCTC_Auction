# BCTC Auction Bot Configuration

# Discord Bot Token (set this as environment variable)
DISCORD_BOT_TOKEN=your_bot_token_here

# Channel Configuration
NOTIFICATION_CHANNEL_ID=your_channel_id_here  # For auction end notifications
LOG_CHANNEL_ID=your_log_channel_id_here       # For error/warning logs (optional)

# Database Configuration
DATABASE_PATH=auctions.db

# Auction Settings
MIN_BID_INCREMENT=0.10     # 10% minimum bid increment
MIN_BID_AMOUNT=0.50        # Minimum starting bid ($0.50)
CLEANUP_INTERVAL_MINUTES=1 # How often to check for expired auctions

# UI Settings
VIEW_TIMEOUT_SECONDS=300   # Timeout for UI views (seconds)

# Bid Sniping Protection
BID_SNIPING_PROTECTION_ENABLED=true     # Enable bid sniping protection
BID_SNIPING_EXTENSION_MINUTES=5         # Minutes to extend auction
BID_SNIPING_WINDOW_MINUTES=5            # Last X minutes trigger extension
BID_SNIPING_EXTENSION_COOLDOWN_SECONDS=300  # Cooldown between bid sniping extensions

# Rate Limiting
MAX_ACTIVE_AUCTIONS_PER_USER=5          # Max active auctions per user
MAX_AUCTIONS_CREATED_PER_HOUR=3         # Max auctions created per hour per user
MAX_BIDS_PER_MINUTE=10                  # Max bids per minute per user
MAX_BIN_PURCHASES_PER_HOUR=5            # Max BIN purchases per hour per user
MIN_BID_TIME_BETWEEN_BIDS_SECONDS=5     # Minimum time between bids per user

# Analysis Settings
LATE_BIDS_THRESHOLD=0.5                 # Threshold for late bids (percentage of total bids)

# Health Monitoring
HEALTH_CHECK_INTERVAL_MINUTES=5         # Health check frequency
METRICS_WEBHOOK_URL=your_webhook_url     # Optional webhook for metrics

# Logging Configuration
LOG_LEVEL=INFO                          # DEBUG, INFO, WARNING, ERROR
LOG_FILE=bot.log                        # Log file name
LOG_MAX_SIZE_MB=10                      # Max log file size before rotation
LOG_BACKUP_COUNT=5                      # Number of backup log files

# Performance Thresholds (for alerts)
RESPONSE_TIME_THRESHOLD_MS=5000         # Alert if response time exceeds this
MEMORY_USAGE_THRESHOLD_MB=512           # Alert if memory usage exceeds this
CPU_USAGE_THRESHOLD_PERCENT=80          # Alert if CPU usage exceeds this